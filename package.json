{
  "name": "commercial-research-workflow",
  "version": "1.0.0",
  "description": "Agentic workflow for deep commercial research using Claude Agent SDK and AgentDB",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "dev:api": "tsx watch src/api/server.ts",
    "dev:dashboard": "cd dashboard && npm run dev",
    "build": "tsc && cd dashboard && npm run build",
    "start": "node dist/api/server.js",
    "init-db": "npx agentdb@latest init ./data/research.db --preset medium",
    "mcp:start": "npx agentdb@latest mcp start",
    "research": "tsx src/cli.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@anthropic-ai/vertex-sdk": "^0.8.0",
    "agentdb": "^1.3.9",
    "google-auth-library": "^9.14.0",
    "better-sqlite3": "^11.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "nanoid": "^5.0.8",
    "socket.io": "^4.8.1",
    "uuid": "^10.0.0",
    "yaml": "^2.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
