# =============================================================================
# GCP / Vertex AI Configuration (Required for production)
# =============================================================================
# GCP Project ID for Vertex AI - REQUIRED when using GCP authentication
GCP_PROJECT_ID=your-gcp-project-id

# GCP Region for Vertex AI (default: us-central1)
GCP_REGION=us-central1

# =============================================================================
# Anthropic API Configuration (Fallback for local development)
# =============================================================================
# Only used when GCP credentials are not provided
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model Configuration
ANTHROPIC_MODEL=claude-opus-4-5-20251101

# =============================================================================
# Database Configuration
# =============================================================================
AGENTDB_PATH=./data/research.db
AGENTDB_DIMENSION=1536

# =============================================================================
# Server Configuration
# =============================================================================
API_PORT=3001
API_HOST=localhost
DASHBOARD_PORT=3000

# =============================================================================
# Research Workflow Configuration
# =============================================================================
MAX_CONCURRENT_AGENTS=5
MAX_RESEARCH_DEPTH=3
SEARCH_RESULTS_PER_QUERY=10

# =============================================================================
# Optional: External Data Sources
# =============================================================================
SERPAPI_KEY=
CLEARBIT_API_KEY=
CRUNCHBASE_API_KEY=
